{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"target": "es2018",
		"outDir": "out",
		"lib": [
			"es2018"
		],
		"sourceMap": true,
		"baseUrl": "src",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
	},
	"exclude": [
		"node_modules"
	]
}
